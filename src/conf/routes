# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                             @controllers.Application.index
GET         /@db                                          @controllers.Application.populateDB
GET         /visualize/datacube                           @controllers.DataCube.visualize

GET         /api/datacube/datasets/:id                    @controllers.api.DataCubeApi.datasets(id: Long)
GET         /api/datacube/datastructures/:id              @controllers.api.DataCubeApi.dataStructures(id: Long)
POST        /api/datacube/values/:id                      @controllers.api.DataCubeApi.values(id: Long)
POST        /api/datacube/slices/:id                      @controllers.api.DataCubeApi.sliceCube(id: Long)

GET         /api/visualization/queries/:id                @controllers.api.VisualizationApi.queries(id: Long, permalinkToken: String)
GET         /api/visualization/cached/:id/:token          @controllers.api.VisualizationApi.getCachedResult(id: Long, token: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.versioned(path="/public", file)
GET         /webjars/*file                          controllers.WebJarAssets.at(file)
